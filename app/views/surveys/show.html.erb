<h1><%= @survey.name %></h1>

<% if @survey.questions.any? %>
  <h4>These are the questions for this survey:</h4>

  <% @survey.questions.each do |question| %>
    <ul>
      <li>
        <%= link_to question.name, survey_question_path(@survey, question) %>
      </li>
    </ul>
  <% end %>
<% else %>
  <p>There are no questions for this survey</p>
<% end %>

<p><%= link_to "Add a Question", new_survey_question_path(@survey) %></p>

<p><%= link_to "Edit", edit_survey_path(@survey) %></p>
<p><%= link_to "Delete", survey_path(@survey),
                         :data => {:confirm => "You sure?",
                                   :method => "delete"} %></p>

<p><%= link_to "Return to surveys", surveys_path %></p>